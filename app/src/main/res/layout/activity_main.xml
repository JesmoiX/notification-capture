<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo/T铆tulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Notification Capture"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Captura notificaciones de YAPE"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Estado -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="锔 Estado: INACTIVO"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:textColor="#FF9800"/>

    <!-- C贸digo de Dispositivo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" C贸digo de Dispositivo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/deviceCodeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XXXXXXXX"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:fontFamily="monospace"/>

            <Button
                android:id="@+id/copyCodeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Copiar"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/refreshStatusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Actualizar"
                android:textSize="12sp"
                android:backgroundTint="#2196F3"/>
        </LinearLayout>

        <TextView
            android:id="@+id/deviceStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente de aprobaci贸n"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Comparte este c贸digo con el administrador para activar la captura de notificaciones"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Configuraci贸n de URL -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL de Google Apps Script:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/urlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://script.google.com/macros/s/..."
        android:inputType="textUri"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Guardar URL"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#4CAF50"/>

    <!-- Selecci贸n de Fuentes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Fuentes de Notificaciones"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona qu茅 notificaciones capturar:"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/yapeCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Notificaciones de YAPE"
            android:textSize="14sp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/gmailCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Notificaciones de Gmail"
            android:textSize="14sp"
            android:checked="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Puedes activar ambas fuentes simult谩neamente"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <!-- Configuraci贸n de Anuncios de Voz -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Anuncios de Voz"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activar anuncios de voz"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/googleHomeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasta:"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/endTimeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20:00"
                android:textSize="14sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bot贸n de prueba -->
    <Button
        android:id="@+id/testAnnouncementButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Probar Anuncio"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FF9800"
        android:visibility="gone"/>

    <!-- Bot贸n de permisos -->
    <Button
        android:id="@+id/openSettingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="锔 Configurar Permisos de Notificaci贸n"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#2196F3"/>

    <!-- Instrucciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Instrucciones:\n\n1. Presiona el bot贸n de arriba\n2. Busca 'Notification Capture'\n3. Activa el interruptor\n4. Vuelve a esta app\n5. Ingresa la URL de Google Script\n6. 隆Listo! Las notificaciones se guardar谩n autom谩ticamente"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="#FFFFFF"/>

</LinearLayout>
</ScrollView>
