                <Button
                    android:id="@+id/openSettingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="âš™ï¸   CONFIGURAR PERMISOS"
                    android:backgroundTint="#3B82F6"
                    android:textSize="15sp"
                    android:letterSpacing="0.02"
                    app:iconPadding="10dp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    android:elevation="4dp"
                    android:stateListAnimator="@null"
                    android:layout_marginBottom="24dp"/>

                 <!-- INSTRUCTIONS (Simplified) -->
                 <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical">
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â„¹ï¸ Instrucciones"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold"
                            android:textColor="#6B7280"/>
                         <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:text="1. Presiona el botÃ³n azul. \n2. Activa 'Notification Capture'.\n3. Configura la URL en Ajustes (arriba derecha).\n4. Â¡Listo!"/>
                    </LinearLayout>
                 </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VersiÃ³n 2.0.5 Modern UI"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:textSize="10sp"
                    android:textColor="#BDBDBD"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

